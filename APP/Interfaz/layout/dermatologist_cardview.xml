<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginBottom="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    style="@style/Widget.MaterialComponents.CardView"
    android:minHeight="200dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dermatologist_name"
            android:layout_width="wrap_content"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:text="Place name"
            android:textSize="12pt"
            android:layout_gravity="center_vertical"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dermatologist_rating"
                android:textColor="@color/colorRating"
                android:textSize="10pt"
                android:text="Place rating"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dermatologist_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place location"
            android:layout_marginTop="24dp"
            android:textSize="8pt"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_maps_button"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:text="@string/open_in_maps_button"
            android:layout_gravity="bottom|end"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>
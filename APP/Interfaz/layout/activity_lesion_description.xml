<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.LesionDescription">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesion_back_button"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example"
                android:id="@+id/lesion_title"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/lesion_back_button"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_description"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:layout_margin="16dp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="8pt"
            android:id="@+id/lesion_description"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_symptoms"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:justificationMode="inter_word"
            android:layout_margin="16dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="8pt"
            android:id="@+id/lesion_symptoms"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dermatologist_credits"
                android:textStyle="italic"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="6pt"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visit_url"
                android:id="@+id/visit_mayoclinic"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorAccent"
                android:textSize="6pt"
                android:layout_marginLeft="4dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>